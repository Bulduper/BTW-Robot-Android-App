<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/throttle_layout"
    android:layout_width="@dimen/throttleBarWidth"
    android:layout_height="@dimen/throttleBarHeight">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/control_bar_background"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/throttle_progress_mark"
        android:layout_centerInParent="true"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="270"
        android:progress="50"
        />
</RelativeLayout>